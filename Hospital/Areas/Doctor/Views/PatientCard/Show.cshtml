                var answer = confirm("Are you sure, Discharge selected patient??")
                if (answer) {
                     $.post("@Url.Action("DischargePatient", "PatientCard",new { @area = "Doctor" })", { Id: ($("#hiddenId").val()) }, function (data) {
                    $("#create-notation").empty();
                    $("#create-notation").append(data);
                    });
                }
                else {
                    //some code
                }
                });*@
        });
    </script>
}




